<Window x:Class="UMLevil.UIEvil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMLevil"
        Icon="icon.ico"
        mc:Ignorable="d"
        Title="UIEvil" Height="450" Width="704">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" Grid.Row="0" Height="20" VerticalAlignment="Top">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="保存(Ctrl + S)"></MenuItem>
            </MenuItem>
            <MenuItem Header="このアプリケーションについて(_X)"/>
        </Menu>
        <TabControl Grid.Row="1" TabStripPlacement="Bottom">
            <TabItem Header="新規*">
                <TextBox/>
            </TabItem>
            <TabItem Header="新規*"/>
        </TabControl>
    </Grid>
</Window>
